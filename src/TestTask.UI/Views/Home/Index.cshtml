@model TestTask.UI.Models.CalculationViewModel

@{
    ViewData["Title"] = "Home Page";
}

<form asp-action="CreateCalculation" method="post">
    <div class="form-group">
        <label for="inputValue">Input Value</label>
        <input type="text" class="form-control" id="inputValue" name="InputValue" required />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (Model is not null)
{
    <p>Gross Annual Salary: @Model.GrossAnnualSalary</p>
    <p>Gross Monthly Salary: @Model.GrossMonthlySalary</p>
    <p>Net Annual Salary: @Model.NetAnnualSalary</p>
    <p>Net Monthly Salary: @Model.NetMonthlySalary</p>
    <p>Annual Tax Paid: @Model.AnnualTaxPaid</p>
    <p>Monthly Tax Paid: @Model.MonthlyTaxPaid</p>
}


